{% extends '@layout/default.html.twig' %}

{% block title %}Submit New Product{% endblock %}

{% block content %}

<div class="container">

    <div class="row">

        <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 no-padding forms">
            <h1>Submit new product</h1>
            <div class="form-content">
                {{ messagesPartial('partial::alerts', {}, null, 'product') }}

                {% set dummy = form.setAttribute('autocomplete', 'off') %}
                {% set dummy = form.prepare() %}
                {{ form().openTag(form) | raw }}

                {% include '@partial/form-display-validationgroup.html.twig' with {'form': form, 'showLabels': true} %}

                {{ form().closeTag() | raw }}
                <hr>
                <div class="alert alert-info" role="alert">
                    <strong>*</strong> The product will have to pass admin validation before being displayed in the application!
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
