{% extends '@layout/default.html.twig' %}

{% block title %}Submit New Product{% endblock %}

{% block content %}

    <div class="container">

        <div class="row">

            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 no-padding forms">
                <span>Selected Day:</span> <strong>{{ currentDay }}</strong>
                |
                <a href="{{ path('meals', {'action' : 'view', 'date' : previousDay}) }}" class="user-icon">Yesterday</a>
                <a href="{{ path('meals', {'action' : 'view', 'date' : nextDay}) }}" class="user-icon">Tomorrow</a>
                <h3>Breakfast</h3>
                {% if meals.breakfastProducts is defined and meals.breakfastProducts is iterable %}
                {% for product in meals.breakfastProducts %}
                    <div class="list-group">
                        <div class="list-group-item active">
                            <h4 class="list-group-item-heading">
                                <span>{{ product.title }}</span>
                            </h4>
                        </div>
                        <div class="list-group-item">
                            <p class="list-group-item-text">
                                Carbs: <strong> {{ product.carbs }}</strong> |
                                Protein: <strong> {{product.protein }}</strong> |
                                Fat: <strong> {{ product.fat }}</strong>
                                Quantity: <strong> {{ meals.breakfastMealProducts[loop.index0].quantity }}</strong>
                            </p>
                        </div>
                    </div>
                {% endfor %}
                {% endif %}
                <a href="{{ path('meals', {'action':'add-meal', 'date': currentDay, 'type': 'breakfast'}) }}">Add Breakfast</a>
                <a href="{{ path('meals', {'action':'edit', 'date': currentDay, 'type': 'breakfast'}) }}">Edit Breakfast</a>
                {% if meals.breakfast.id is defined %}
                    <a href="{{ path('recipe', {'action':'save-meal-to-recipe', 'id': meals.breakfast.id}) }}">Save to Recipe</a>
                {% endif %}
                <hr>
                <h3>Lunch</h3>
                {% if meals.lunchProducts is defined and meals.lunchProducts is iterable %}
                    {% for product in meals.lunchProducts %}
                        <div class="list-group">
                            <div class="list-group-item active">
                                <h4 class="list-group-item-heading">
                                    <span>{{ product.title }}</span>
                                </h4>
                            </div>
                            <div class="list-group-item">
                                <p class="list-group-item-text">
                                    Carbs: <strong> {{ product.carbs }}</strong> |
                                    Protein: <strong> {{ product.protein }}</strong> |
                                    Fat: <strong> {{ product.fat }}</strong>
                                    Quantity: <strong> {{ meals.lunchMealProducts[loop.index0].quantity }}</strong>
                                </p>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
                <a href="{{ path('meals', {'action':'add-meal', 'date': currentDay, 'type': 'lunch'}) }}">Add Lunch</a>
                {% if meals.lunch.id is defined %}
                    <a href="{{ path('recipe', {'action':'save-meal-to-recipe', 'id': meals.lunch.id}) }}">Save to Recipe</a>
                {% endif %}
                <hr>
                <h3>Dinner</h3>
                {% if meals.dinnerProducts is defined and meals.dinnerProducts is iterable %}
                    {% for product in meals.dinnerProducts %}
                        <div class="list-group">
                            <div class="list-group-item active">
                                <h4 class="list-group-item-heading">
                                    <span>{{ product.title }}</span>
                                </h4>
                            </div>
                            <div class="list-group-item">
                                <p class="list-group-item-text">
                                    Carbs: <strong> {{ product.carbs }}</strong> |
                                    Protein: <strong> {{ product.protein }}</strong> |
                                    Fat: <strong> {{ product.fat }}</strong>
                                    Quantity: <strong> {{ meals.dinnerMealProducts[loop.index0].quantity }}</strong>
                                </p>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
                <a href="{{ path('meals', {'action':'add-meal', 'date': currentDay, 'type': 'dinner'}) }}">Add Dinner</a>
                {% if meals.dinner.id is defined %}
                    <a href="{{ path('recipe', {'action':'save-meal-to-recipe', 'id': meals.dinner.id}) }}">Save to Recipe</a>
                {% endif %}
                <hr>
                <h3>Snacks</h3>
                {% if meals.snacksProducts is defined and meals.snacksProducts is iterable %}
                    {% for product in meals.dinnerProducts %}
                        <div class="list-group">
                            <div class="list-group-item active">
                                <h4 class="list-group-item-heading">
                                    <span>{{ product.title }}</span>
                                </h4>
                            </div>
                            <div class="list-group-item">
                                <p class="list-group-item-text">
                                    Carbs: <strong> {{ product.carbs }}</strong> |
                                    Protein: <strong> {{ product.protein }}</strong> |
                                    Fat: <strong> {{ product.fat }}</strong>
                                    Quantity: <strong> {{ meals.snacksMealProducts[loop.index0].quantity }}</strong>
                                </p>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
                <a href="{{ path('meals', {'action':'add-meal', 'date': currentDay, 'type': 'snacks'}) }}">Add Snacks</a>
                {% if meals.snacks.id is defined %}
                    <a href="{{ path('recipe', {'action':'save-meal-to-recipe', 'id': meals.snacks.id}) }}">Save to Recipe</a>
                {% endif %}
                <hr>
            </div>
        </div>
    </div>

{% endblock %}
