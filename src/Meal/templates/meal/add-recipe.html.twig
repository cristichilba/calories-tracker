{% extends '@layout/default.html.twig' %}

{% block stylesheets %}
    <style>
        .addRecipeBtn:hover {
            cursor: pointer;
        }
    </style>
{% endblock %}
{% block title %}Search Recipes{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 no-padding forms">
                <h1>Search Recipes</h1>
                <div class="form-content">
                    {{ messagesPartial('partial::alerts') }}

                    {% set dummy = form.prepare() %}
                    {{ form().openTag(form) | raw }}

                    {% include '@partial/form-display.html.twig' with {'form': form, 'showLabels': true} %}

                    {{ form().closeTag() | raw }}

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 no-padding">
                {% if recipes is defined and recipes is iterable %}
                    <h3>Results</h3>
                    {% for recipe in recipes %}
                        <div class="list-group">
                            <div class="list-group-item active">
                                <h4 class="list-group-item-heading">
                                    <span>{{ recipe.name }}</span>
                                </h4>
                                <i class="fa fa-plus fa-2x addRecipeBtn" data-date="{{ date }}" data-type="{{ type }}" data-userId="{{ userId }}" data-recipeId="{{ recipe.id }}" role="button"></i>
                            </div>
                            {% if products[recipe.id] is defined and products[recipe.id] is iterable %}
                                {% for product in products[recipe.id] %}
                                    <div class="list-group-item">
                                        <p class="list-group-item-text">
                                            <strong> {{ product.title }} </strong>
                                            Carbs: <strong> {{ product.carbs }}</strong> |
                                            Protein: <strong> {{ product.protein }}</strong> |
                                            Fat: <strong> {{ product.fat }}</strong>
                                            Quantity: <strong> {{ recipeProducts[recipe.id][loop.index0].quantity }}</strong>
                                        </p>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    <script>
        $('.addRecipeBtn').click(function(e) {
            let date = $(this).attr('data-date');
            let type = $(this).attr('data-type');
            let userId = $(this).attr('data-userId');
            let recipeId = $(this).attr('data-recipeId');

            $.post("{{ path('meals', {'action':'save-meal-recipe'}) }}",
                {'date': date, 'type': type, 'userId': userId, 'recipeId': recipeId},
                function() {
                }).done(function (data) {
                window.location.href =  "{{ path('meals', {'action':'view'}) }}";
            })
        });
    </script>
{% endblock %}
