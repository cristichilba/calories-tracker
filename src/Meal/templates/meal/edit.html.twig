{% extends '@layout/default.html.twig' %}

{% block title %}Edit Meal{% endblock %}

{% block content %}

<div class="container">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 no-padding forms">
            <h1>Edit {{ type }}</h1>
            {{ messagesPartial('partial::alerts', {}, null, 'meals') }}
            <h3>Meal Products</h3>
            {% if meal is defined %}
            <div class="list-group">
                <div class="list-group-item active">
                    <h4 class="list-group-item-heading">
                        <span>{{ meal.date }}</span>
                    </h4>
                </div>
                {% if products is defined and products is iterable %}
                {% for product in products %}
                <div class="list-group-item">
                    <p class="list-group-item-text">
                        <strong> {{ product.title }} </strong>
                        Carbs: <strong> {{ product.carbs }}</strong> |
                        Protein: <strong> {{ product.protein }}</strong> |
                        Fat: <strong> {{ product.fat }}</strong>

                        Quantity:
                        <input type="number" class="quantity" value={{ mealProducts[loop.index0].quantity }} min="0" max="9999"
                               data-mealProductId = {{ mealProducts[loop.index0].id }}>
                        <i class="fa fa-trash fa-2x deleteProductBtn" role="button" data-mealProductId = {{ mealProducts[loop.index0].id }}></i>
                    </p>
                </div>
                {% endfor %}
                {% endif %}
            </div>
                <a href="{{ path('meals', {'action':'add-meal', 'date': meal.date, 'type': meal.type }) }}">Add Products</a>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
{% block javascript %}
<script>
    $('.quantity').change(function(e) {
        let mealProductId = $(this).attr('data-mealProductId');
        let productQuantity = $(this).val();
        $.post("{{ path('meals', {'action':'edit-meal-product'}) }}",
            {'mealProductId': mealProductId, 'quantity': productQuantity, 'type': 'update'},
            function() {
            }).done(function (data) {
            window.location.reload();
        })
    });
    $('.deleteProductBtn').click(function(e) {
        let mealProductId = $(this).attr('data-mealProductId');
        let productQuantity = $(this).val();
        $.post("{{ path('meals', {'action':'edit-meal-product'}) }}",
            {'mealProductId': mealProductId, 'quantity': productQuantity, 'type': 'delete'},
            function() {
            }).done(function (data) {
            window.location.reload();
        })
    });
</script>
{% endblock %}
