{% extends '@layout/default.html.twig' %}

{% block title %}Edit Meal{% endblock %}

{% block content %}

<div class="container">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 no-padding forms">
                <h1>Edit {{ type }} on {{ meal.date }}</h1>
            {{ messagesPartial('partial::alerts', {}, null, 'meals') }}

            <h3>Meal Recipes</h3>
            {% if recipeData.recipes is defined and recipeData.recipes is iterable %}
            {% for recipe in recipeData.recipes %}
            <div class="list-group">
                <div class="list-group-item active">
                    <h4 class="list-group-item-heading">
                        <span>{{ recipe.name }}</span>
                        <i class="fa fa-trash fa-2x deleteRecipeBtn" role="button" data-mealRecipeId = {{ mealRecipes[loop.index0].id }}></i>
                    </h4>
                </div>
                {% if recipeData.products[recipe.id] is defined and  recipeData.products[recipe.id] is iterable %}
                    {% for product in  recipeData.products[recipe.id] %}
                        <div class="list-group-item">
                            <p class="list-group-item-text">
                                <strong> {{ product.title }} </strong>
                                Carbs: <strong> {{ product.carbs }}</strong> |
                                Protein: <strong> {{ product.protein }}</strong> |
                                Fat: <strong> {{ product.fat }}</strong>
                                Quantity: <strong> {{  recipeData.recipeProducts[recipe.id][loop.index0].quantity }}</strong>
                            </p>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
            {% endfor %}
            {% endif %}
            <a href="{{ path('meals', {'action':'add-recipe', 'date': meal.date, 'type': meal.type }) }}">Add Recipe</a>


            <h3>Meal Products</h3>
            {% if products is defined and products is iterable %}
            {% for product in products %}
                <div class="list-group">
                <div class="list-group-item">
                    <p class="list-group-item-text">
                        <strong> {{ product.title }} </strong>
                        Carbs: <strong> {{ product.carbs }}</strong> |
                        Protein: <strong> {{ product.protein }}</strong> |
                        Fat: <strong> {{ product.fat }}</strong>

                        Quantity:
                        <input type="number" class="quantity" value={{ mealProducts[loop.index0].quantity }} min="0" max="9999"
                               data-mealProductId = {{ mealProducts[loop.index0].id }}>
                        <i class="fa fa-trash fa-2x deleteProductBtn" role="button" data-mealProductId = {{ mealProducts[loop.index0].id }}></i>
                    </p>
                </div>
                </div>
            {% endfor %}
            {% endif %}
            <a href="{{ path('meals', {'action':'add-product', 'date': meal.date, 'type': meal.type }) }}">Add Product</a>
        </div>
    </div>
</div>
{% endblock %}
{% block javascript %}
<script>
    $('.quantity').change(function(e) {
        let mealProductId = $(this).attr('data-mealProductId');
        let productQuantity = $(this).val();
        $.post("{{ path('meals', {'action':'edit-meal-product'}) }}",
            {'mealProductId': mealProductId, 'quantity': productQuantity, 'type': 'update'},
            function() {
            }).done(function (data) {
            window.location.reload();
        })
    });
    $('.deleteProductBtn').click(function(e) {
        let mealProductId = $(this).attr('data-mealProductId');
        let productQuantity = $(this).val();
        $.post("{{ path('meals', {'action':'edit-meal-product'}) }}",
            {'mealProductId': mealProductId, 'quantity': productQuantity, 'type': 'delete'},
            function() {
            }).done(function (data) {
            window.location.reload();
        })
    });
    $('.deleteRecipeBtn').click(function(e) {
        let mealRecipeId = $(this).attr('data-mealRecipeId');
        $.post("{{ path('meals', {'action':'edit-meal-recipe'}) }}",
            {'mealRecipeId': mealRecipeId, 'type': 'delete'},
            function() {
            }).done(function (data) {
            window.location.reload();
        })
    });
</script>
{% endblock %}
