{% extends '@layout/default.html.twig' %}

{% block stylesheets %}
    <style>
        .addProductBtn:hover {
            cursor: pointer;
        }
    </style>
{% endblock %}
{% block title %}Search Products{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 no-padding forms">
                <h1>Search Products</h1>
                <div class="form-content">
                    {{ messagesPartial('partial::alerts') }}

                    {% set dummy = form.prepare() %}
                    {{ form().openTag(form) | raw }}

                    {% include '@partial/form-display.html.twig' with {'form': form, 'showLabels': true} %}

                    {{ form().closeTag() | raw }}

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 no-padding">
                {% if products is defined %}
                    <h3>Results</h3>
                    {% for product in products %}
                        <div class="list-group">
                            <div class="list-group-item active">
                                <h4 class="list-group-item-heading">
                                    <span>{{ product.title }}</span>
                                </h4>
                            </div>
                            <div class="list-group-item">
                                <div class="row">
                                    <div class="col-sm-6 col-md-6 col-lg-6">
                                        <p class="list-group-item-text">
                                            Carbs: <strong> {{ product.carbs }}</strong> |
                                            Protein: <strong> {{ product.protein }}</strong> |
                                            Fat: <strong> {{ product.fat }}</strong>
                                        </p>
                                    </div>
                                    <div class="col-sm-4 col-md-4 col-lg-4 quantityContainer">
                                        <label for="quantity">Quantity</label>
                                        <input type="number" class="quantity" value="0" min="0" max="9999">
                                    </div>
                                    <div class="col-sm-2 col-md-2 col-lg-2">
                                        <i class="fa fa-plus fa-2x addProductBtn" data-date="{{ date }}" data-type="{{ type }}" data-userId="{{ userId }}" data-productId="{{ product.id }}" role="button">
                                        </i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
<script>
    $('.addProductBtn').click(function(e) {

        let date = $(this).attr('data-date');
        let type = $(this).attr('data-type');
        let userId = $(this).attr('data-userId');
        let productId = $(this).attr('data-productId');
        let productQuantity = $(this).parent().siblings('.quantityContainer').children('.quantity').val();
        $.post("{{ path('meals', {'action':'save-meal-product'}) }}",
            {'date': date, 'type': type, 'userId': userId, 'productId': productId, 'quantity': productQuantity},
            function() {
        }).done(function (data) {
            window.location.href =  "{{ path('meals', {'action':'view'}) }}";
        })
    });
</script>
{% endblock %}

