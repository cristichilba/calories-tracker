<div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
        <button class="btn btn-outline-primary btn-sm" onclick="window.location.href='{{ path('meals', {'action':'add-product', 'date': currentDay, 'type': 'snack'}) }}'">
            <i class="fa fa-plus"></i>
            Add Product
        </button>
        <button class="btn btn-outline-primary btn-sm" onclick="window.location.href='{{ path('meals', {'action':'add-recipe', 'date': currentDay, 'type': 'snack'}) }}'">
