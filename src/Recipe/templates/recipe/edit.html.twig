{% extends '@layout/default.html.twig' %}

{% block title %}Edit Recipe{% endblock %}

{% block content %}

<div class="container">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 no-padding forms">
            <h1>Edit Recipe</h1>
            <div class="form-content">
                {% set dummy = form.setAttribute('autocomplete', 'off') %}
                {% set dummy = form.prepare() %}
                {{ form().openTag(form) | raw }}

                {% include '@partial/form-display-validationgroup.html.twig' with {'form': form, 'showLabels': true} %}

                {{ form().closeTag() | raw }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 no-padding forms">
            {{ messagesPartial('partial::alerts', {}, null, 'recipe') }}
            <h3>Recipe Products</h3>
            {% if recipe is defined %}
            <div class="list-group">
                <div class="list-group-item active">
                    <h4 class="list-group-item-heading">
                        <span>{{ recipe.name }}</span>
                    </h4>
                </div>
            {% if products is defined and products is iterable %}
            {% for product in products %}
                <div class="list-group-item">
                    <p class="list-group-item-text">
                        <strong> {{ product.title }} </strong>
                        Carbs: <strong> {{ product.carbs }}</strong> |
                        Protein: <strong> {{ product.protein }}</strong> |
                        Fat: <strong> {{ product.fat }}</strong>

                        Quantity:
                        <input type="number" class="quantity" value={{ recipeProducts[loop.index0].quantity }} min="0" max="9999"
                               data-recipeProductId = {{ recipeProducts[loop.index0].id }}>
                        <i class="fa fa-trash fa-2x deleteProductBtn" role="button" data-recipeProductId = {{ recipeProducts[loop.index0].id }}></i>
                    </p>
                </div>
            {% endfor %}
            {% endif %}
                <a href="{{ path('recipe', {'action':'add-product', 'id': recipe.id}) }}">Add Product</a>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
{% block javascript %}
    <script>
        $('.quantity').change(function(e) {
            let recipeProductId = $(this).attr('data-recipeProductId');
            let productQuantity = $(this).val();
            $.post("{{ path('recipe', {'action':'edit-recipe-product'}) }}",
                {'recipeProductId': recipeProductId, 'quantity': productQuantity, 'type': 'update'},
                function() {
                }).done(function (data) {
                    window.location.reload();
            })
        });
        $('.deleteProductBtn').click(function(e) {
            let recipeProductId = $(this).attr('data-recipeProductId');
            let productQuantity = $(this).val();
            $.post("{{ path('recipe', {'action':'edit-recipe-product'}) }}",
                {'recipeProductId': recipeProductId, 'quantity': productQuantity, 'type': 'delete'},
                function() {
                }).done(function (data) {
                window.location.reload();
            })
        });
    </script>
{% endblock %}
